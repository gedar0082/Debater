<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="mViewmodel"
            type="com.gedar0082.debater.viewmodel.DebateViewModel" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/card_round"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Dialog_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/stix"
            android:gravity="center"
            android:text="Create New"
            android:textColor="@color/textPrimaryDark"
            android:textSize="28sp" />

        <EditText
            android:id="@+id/disName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:autofillHints="Player 1"
            android:fontFamily="@font/stix"
            android:inputType="text"
            android:shadowColor="@color/colorAccent"
            android:text="@{mViewmodel.debateName}"
            android:textColor="@color/textPrimary"
            android:textColorHighlight="@color/textPrimary" />

        <EditText
            android:id="@+id/disDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="16dp"
            android:autofillHints="Player 2"
            android:fontFamily="@font/stix"
            android:inputType="text"
            android:shadowColor="@color/colorAccent"
            android:text="@{mViewmodel.debateDescription}"
            android:textColor="@color/textPrimaryDark" />

    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="mViewmodel"
            type="com.gedar0082.debater.viewmodel.DebateViewModel" />
    </data>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_round">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/Dialog_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/stix"
                    android:gravity="center"
                    android:text="Create New"
                    android:textColor="@color/textPrimaryDark"
                    android:textSize="28sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/thesis_name_text"
                    android:text="Thesis name"
                    android:fontFamily="@font/stix"
                    android:gravity="left"
                    android:textColor="@color/textPrimaryDark"
                    android:textSize="20sp"
                    >

                </TextView>

                <EditText
                    android:id="@+id/disName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="4dp"
                    android:autofillHints="Thesis name"
                    android:fontFamily="@font/stix"
                    android:inputType="textCapSentences|textMultiLine"
                    android:isScrollContainer="true"
                    android:shadowColor="@color/colorAccent"
                    android:text="@{mViewmodel.debateName}"
                    android:textColor="@color/textPrimary"
                    android:textColorHighlight="@color/textPrimary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/thesis_desc_text"
                    android:text="Thesis description"
                    android:fontFamily="@font/stix"
                    android:gravity="left"
                    android:textColor="@color/textPrimaryDark"
                    android:textSize="20sp"
                    >

                </TextView>

                <EditText
                    android:id="@+id/disDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="16dp"
                    android:autofillHints="Thesis description"
                    android:fontFamily="@font/stix"
                    android:inputType="textCapSentences|textMultiLine"
                    android:isScrollContainer="true"
                    android:shadowColor="@color/colorAccent"
                    android:text="@{mViewmodel.debateDescription}"
                    android:textColor="@color/textPrimaryDark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/thesis_args_text"
                    android:text="Thesis arguments"
                    android:fontFamily="@font/stix"
                    android:gravity="left"
                    android:textColor="@color/textPrimaryDark"
                    android:textSize="20sp"
                    >
                </TextView>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_answer1"
                    android:text="answer to first argument">
                </Button>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_answer_for1"/>

                <EditText
                    android:id="@+id/arg1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="16dp"
                    android:autofillHints="Thesis description"
                    android:fontFamily="@font/stix"
                    android:inputType="textCapSentences|textMultiLine"
                    android:isScrollContainer="true"
                    android:shadowColor="@color/colorAccent"
                    android:text=""
                    android:textColor="@color/textPrimaryDark"
                    android:layout_weight="5"/>
            </LinearLayout>
        </ScrollView>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/card_round"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_round">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/argument_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/Dialog_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/stix"
                android:gravity="center"
                android:text="@string/create_new"
                android:textColor="@color/textPrimaryDark"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/argument_title_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/argument_title_text"
                android:fontFamily="@font/stix"
                android:gravity="start"
                android:textColor="@color/textPrimaryDark"
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/argument_title_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:autofillHints="Thesis name"
                android:fontFamily="@font/stix"
                android:maxLength="200"
                android:inputType="textCapSentences|textMultiLine"
                android:isScrollContainer="true"
                android:shadowColor="@color/colorAccent"
                android:textColor="@color/textPrimary"
                android:textColorHighlight="@color/textPrimary"
                android:hint="@string/argument_title_input"/>

            <TextView
                android:id="@+id/argument_statement_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/argument_statement_text"
                android:fontFamily="@font/stix"
                android:gravity="start"
                android:textColor="@color/textPrimaryDark"
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/argument_statement_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:autofillHints="Thesis name"
                android:fontFamily="@font/stix"
                android:maxLength="1024"
                android:inputType="textCapSentences|textMultiLine"
                android:isScrollContainer="true"
                android:shadowColor="@color/colorAccent"
                android:textColor="@color/textPrimary"
                android:textColorHighlight="@color/textPrimary"
                android:hint="@string/argument_statement_input"/>

            <TextView
                android:id="@+id/argument_response_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/argument_response_text"
                android:fontFamily="@font/stix"
                android:gravity="start"
                android:textColor="@color/textPrimaryDark"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/argument_response"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/stix"
                android:gravity="start"
                android:textColor="@color/textPrimaryDark"
                android:textSize="20sp"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
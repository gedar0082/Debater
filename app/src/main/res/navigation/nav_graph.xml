            android:id="@+id/action_userFragment_self"
            app:destination="@id/userFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.gedar0082.debater.view.SettingsFragment"
        android:label="fragment_settings"

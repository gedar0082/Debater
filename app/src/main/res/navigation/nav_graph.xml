<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/debateFragment"
        android:name="com.gedar0082.debater.view.DebateFragment"
        android:label="fragment_debate"
        tools:layout="@layout/fragment_debate" >
        <action
            android:id="@+id/action_debateFragment_to_userFragment"
            app:destination="@id/userFragment" />
        <action
            android:id="@+id/action_debateFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_debateFragment_to_infoFragment"
            app:destination="@id/infoFragment" />
        <action
            android:id="@+id/action_debateFragment_to_thesisMapFragment"
            app:destination="@id/thesisMapFragment" />
        <action
            android:id="@+id/action_debateFragment_self"
            app:destination="@id/debateFragment" />
        <action
            android:id="@+id/action_debateFragment_to_argumentMapFragment"
            app:destination="@id/argumentMapFragment" />
    </fragment>
    <fragment
        android:id="@+id/userFragment"
        android:name="com.gedar0082.debater.view.UserFragment"
        android:label="fragment_user"
        tools:layout="@layout/fragment_user" >
        <action
            android:id="@+id/action_userFragment_to_debateFragment"
            app:destination="@id/debateFragment" />

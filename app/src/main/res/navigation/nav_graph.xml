        <action
            android:id="@+id/action_settingsFragment_to_debateFragment"
            app:destination="@id/debateFragment" />
        <action
            android:id="@+id/action_settingsFragment_self"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/infoFragment"
        android:name="com.gedar0082.debater.view.InfoFragment"
        android:label="fragment_info"
        tools:layout="@layout/fragment_info" >
        <action
            android:id="@+id/action_infoFragment_to_debateFragment"
            app:destination="@id/debateFragment" />
        <action
            android:id="@+id/action_infoFragment_self"
            app:destination="@id/infoFragment" />
    </fragment>
    <fragment
        android:id="@+id/thesisMapFragment"
        android:name="com.gedar0082.debater.view.ThesisMapFragment"
        android:label="fragment_thesis_map"
        tools:layout="@layout/fragment_thesis_map" >
        <action
            android:id="@+id/action_thesisMapFragment_to_debateFragment"
            app:destination="@id/debateFragment" />

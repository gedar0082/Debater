            android:id="@+id/action_thesisMapFragment_to_infoFragment"
            app:destination="@id/infoFragment" />
        <action
            android:id="@+id/action_thesisMapFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_thesisMapFragment_to_userFragment"
            app:destination="@id/userFragment" />
        <action
            android:id="@+id/action_thesisMapFragment_to_argumentMapFragment"
            app:destination="@id/argumentMapFragment" />
    </fragment>
    <fragment
        android:id="@+id/argumentMapFragment"
        android:name="com.gedar0082.debater.view.ArgumentMapFragment"
        android:label="fragment_argument_map"
        tools:layout="@layout/fragment_argument_map" >
        <action
            android:id="@+id/action_argumentMapFragment_to_debateFragment"
            app:destination="@id/debateFragment" />
        <action
            android:id="@+id/action_argumentMapFragment_to_infoFragment"
            app:destination="@id/infoFragment" />
